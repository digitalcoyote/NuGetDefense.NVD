<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>10</LangVersion>
        <PackageVersion>2.0.7</PackageVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup>
        <Authors>Curtis Carter</Authors>
        <PackageId>NuGetDefense.NVD</PackageId>
        <Title>NuGetDefense.NVD</Title>
        <PackageProjectUrl>https://github.com/DigitalCoyote/NuGetDefense.NVD</PackageProjectUrl>
        <Description>Provides logic to scan packages using the National Vulnerability Database.</Description>
        <PackageReleaseNotes>https://github.com/digitalcoyote/NuGetDefense.NVD/releases</PackageReleaseNotes>
        <RepositoryUrl>https://github.com/digitalcoyote/NuGetDefense.NVD.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Security</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>icon.png</PackageIcon>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>
    <ItemGroup>
        <None Include="icon.png" Pack="true" PackagePath="\" />
    </ItemGroup>    
    <ItemGroup>
      <PackageReference Include="MessagePack" Version="2.3.112" />
      <PackageReference Include="NuGet.Versioning" Version="6.2.1" />
      <PackageReference Include="NuGetDefense.Core" Version="2.0.3" />
      <PackageReference Include="System.Text.Json" Version="6.0.5" />
    </ItemGroup>
</Project>
